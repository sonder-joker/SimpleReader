<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="rssAddViewModel"
            type="com.youngerhousea.simplereader.viewmodel.RssAddViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:context=".fragment.RssAddFragment">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:text="@string/group"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/rss_group"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:entries="@={rssAddViewModel.groups}"
                android:selectedItemPosition="@={rssAddViewModel.groupId}" />

            <TextView
                android:text="@string/url"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/url_to_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:importantForAutofill="no"
                android:hint="@string/url_you_want_to_add"
                android:text="@={rssAddViewModel.urlToAdd}"
                android:inputType="textUri" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="248dp"
            android:layout_marginTop="56dp"
            android:layout_weight="1"
            android:text="@string/confirm_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:onClick="@{() -> rssAddViewModel.addToGroup(rssAddViewModel.urlToAdd, rssAddViewModel.groupId)}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>