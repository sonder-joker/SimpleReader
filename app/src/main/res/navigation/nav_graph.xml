<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.youngerhousea.simplereader.fragment.NewsFragment"
        android:label="News">
        <action
            android:id="@+id/action_newsFragment_to_rssAddFragment"
            app:destination="@id/rssAddFragment" />
        <action
            android:id="@+id/action_newsFragment_to_meFragment"
            app:destination="@id/meFragment" />
    </fragment>
    <fragment
        android:id="@+id/meFragment"
        android:name="com.youngerhousea.simplereader.fragment.MeFragment"
        android:label="Me" />
    <fragment
        android:id="@+id/rssAddFragment"
        android:name="com.youngerhousea.simplereader.fragment.RssAddFragment"
        android:label="Add Rss">
        <action
            android:id="@+id/action_rssAddFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_rssAddFragment_to_addGroupDialogFragment"
            app:destination="@id/addGroupDialogFragment" />
    </fragment>

    <dialog
        android:id="@+id/addGroupDialogFragment"
        android:name="com.youngerhousea.simplereader.fragment.RssAddDialogFragment"
        android:label="AddGroupDialogFragment">
        <argument
            android:name="arg"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_addGroupDialogFragment_to_rssAddFragment"
            app:destination="@id/rssAddFragment" />
    </dialog>
</navigation>